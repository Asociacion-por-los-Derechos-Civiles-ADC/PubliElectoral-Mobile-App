  "version": "0.2.0",
  "configurations": [

    {
      "type": "android",
      "request": "launch",
      "name": "Android launch",
      "appSrcRoot": "${workspaceRoot}/app/src/main",
      "apkFile": "${workspaceRoot}/app/build/outputs/apk/debug/Publielectoral-debug.apk",
      "adbPort": 5037
    },
    {
      "request": "launch",
      "type": "android",
      "name": "App Build & Launch",
      "appSrcRoot": "${workspaceRoot}/app/src/main",
      "apkFile": "${workspaceRoot}/app/build/outputs/apk/debug/Publielectoral-debug.apk",
      "preLaunchTask": "run gradle"
    },
    {
      "request": "launch",
      "type": "android",
      "name": "App Launch Release",
      "appSrcRoot": "${workspaceRoot}/app/src/main",
      "apkFile": "${workspaceRoot}/app/build/outputs/apk/release/Publielectoral-release.apk",
      "preLaunchTask": "run gradle"
    }
  ]
}
